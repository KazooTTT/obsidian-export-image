{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "types": ["obsidian-typings"],
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "jsx": "preserve",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "main.ts", "src/**/*.tsx"],
  "exclude": ["src/dom-to-image-more.js"]
}
